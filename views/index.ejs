  <!----Form -->
  <form id="int_form" action="/resume" method="post">
    <!-- onsubmit="show()" -->
    <div class="cardz">
      <h3>STEP 1:</h3>
      <div class="card-container">
        <div
          class="card text-center p-4 shadow"
          style="width: 25rem; border-radius: 29px; box-shadow: 0 25px 25px rgba(0, 0, 0, 0.1), 0 25px 25px rgba(0, 0, 0, 0.1);"
        >
          <h2 class="card-title pb-3">Paste Your CV</h2>
          <div class="mb-3">
            <label for="experience" class="form-label"
              >Paste Your Internships & Experience</label
            >
            <textarea
              class="form-control"
              id="exp"
              name="exp"
              rows="3"
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="projects" class="form-label"
              >Write About Your Personal Projects</label
            >

            <textarea
              class="form-control"
              id="proj"
              name="proj"
              rows="4"
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="projects" class="form-label">Skills</label>
            <textarea
              class="form-control"
              id="skills"
              name="skills"
              rows="1"
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="projects" class="form-label">Achievements</label>
            <textarea
              class="form-control"
              id="ach"
              name="ach"
              rows="1"
            ></textarea>
          </div>
        </div>
      </div>
      <h3>STEP 2:</h3>
      <div class="card-container">
        <div
          class="card text-center p-4 shadow"
          style="width: 25rem; border-radius: 29px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 5px 15px rgba(0, 0, 0, 0.1);"
        >
          <h2 class="card-title pb-3">Paste your JD</h2>
          <div class="mb-3">
            <label for="experience" class="form-label"
              >Paste Job Description</label
            >
            <textarea
              class="form-control"
              id="jd"
              name="jd"
              rows="6"
            ></textarea>
          </div>
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control rounded-pill border border-dashed border-secondary"
              placeholder="Paste Your JD Link"
              aria-label="Input Field"
              aria-describedby="button-addon2"
            />
          </div>
        </div>
      </div>

      <div class="buttons">
        <button type="submit" class="btn-p">Generate Answers</button>
      </div>
    </div>
  </form>

