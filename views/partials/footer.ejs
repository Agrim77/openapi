    <script>
      const uploadImage = document.getElementById('uploadImage');
      // const dragDropText = document.getElementById('dragDropText');
    
      uploadImage.addEventListener('click', function() {
        // Trigger the click event on the file input element
        const fileInput = document.createElement('input');
        fileInput.type = 'file';
        fileInput.accept = '.txt,.pdf'; // Restrict file type to .txt or .pdf
        fileInput.onchange = handleFileInputChange;
        fileInput.click();
      });
    
      function handleFileInputChange(event) {
        const file = event.target.files[0];
        
        // Check if the selected file type is allowed
        if (file.type === 'text/plain' || file.type === 'application/pdf') {
          // Handle the file as per your requirements
          // For example, you can display the file name or upload it to a server
          console.log('Selected file:', file.name);
        } else {
          console.log('Invalid file type. Please select a .txt or .pdf file.');
        }
      }
    </script>
